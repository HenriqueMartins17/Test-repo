    <changeSet id="V0.10-20220209-002" author="shawn" labels="social">
        <comment>Social Tenant Department Table add open_department_id field</comment>
        <sql>
            ALTER TABLE `${table.prefix}social_tenant_department_bind`
                ADD COLUMN `tenant_open_department_id` varchar(255) NULL COMMENT 'Unique ID of the department opening under the tenant' AFTER `tenant_department_id`;
        </sql>
    </changeSet>
</databaseChangeLog>
