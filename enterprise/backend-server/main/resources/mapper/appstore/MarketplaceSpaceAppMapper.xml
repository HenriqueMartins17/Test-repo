<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apitable.enterprise.appstore.mapper.MarketplaceSpaceAppMapper">
    <select id="selectBySpaceId" resultType="java.lang.String">
        SELECT app_id
        FROM ${tablePrefix}marketplace_space_app_rel
        WHERE space_id = #{spaceId}
    </select>

    <select id="selectCountBySpaceIdAndAppId" resultType="java.lang.Integer">
        SELECT count(*)
        FROM ${tablePrefix}marketplace_space_app_rel
        WHERE space_id = #{spaceId} and app_id = #{appId}
    </select>

    <delete id="deleteBySpaceIdAndAppId">
        DELETE
        FROM ${tablePrefix}marketplace_space_app_rel
        WHERE space_id = #{spaceId} and app_id = #{appId}
    </delete>

    <select id="selectBySpaceIdAndAppId"
            resultType="com.apitable.enterprise.appstore.entity.MarketplaceSpaceAppRelEntity">
        SELECT * FROM ${tablePrefix}marketplace_space_app_rel
        WHERE space_id = #{spaceId} and app_id = #{appId}
    </select>
</mapper>
